<h1><%- title %></h1>
  <% if (messages && messages.notice && messages.notice.length > 0) { %>
    <% messages.notice.forEach(function(msg) { %>
      <div class="flash-message"><%= msg %></div>
    <% }) %>
  <% } %>

  <h2>Welcome <%= accountData.account_firstname %>!</h2>

  <% if (message) { %>
    <div class="flash-message"><%= message %></div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <ul class="errors">
      <% errors.forEach(function(error) { %>
        <li><%= error %></li>
      <% }) %>
    </ul>
  <% } %>

  <% if (loggedin) { %>
    <p>
      <a href="/account/update/<%= accountData.account_id %>" class="btn-edit-account">
        <i class="fas fa-user-edit"></i> Edit Account Information
      </a>
    </p>

    <!-- Inventory Management section -->
    <h3>Inventory Management</h3>
    <p>
      <a href="/inventory/manage" class="btn-manage-inventory">
        <i class="fas fa-cogs"></i> Manage Inventory
      </a>
    </p>
  <% } %>
