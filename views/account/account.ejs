<main id="account-dashboard">
    <h2>Welcome <%= accountData.account_firstname %></h2>
  
    <!-- Link to update account info (for all clients) -->
    <p>
      <a href="/account/update/<%= accountData.account_id %>" class="update-link">
        Update Account Information
      </a>
    </p>
  
    <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
      <h3>Inventory Management</h3>
      <p>
        <a href="/inventory" class="inventory-link">Go to Inventory Management</a>
      </p>
    <% } %>
</main>
  