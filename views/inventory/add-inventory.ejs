<h1><%= title %></h1>

<% if (messages.errorList && messages.errorList.length > 0) { %>
    <div class="alert alert-danger">
        <ul>
            <% messages.errorList.forEach(function(error) { %>
                <li><%= error %></li>
            <% }); %>
        </ul>
    </div>
<% } %>


<form action="/inv/add-inventory" method="POST">
    <label for="classificationList">Classification:</label>
    <%- classifications %>

    <label for="inv_make">Make:</label>
    <input type="text" name="inv_make" id="inv_make" value="" required />

    <label for="inv_model">Model:</label>
    <input type="text" name="inv_model" id="inv_model" value="" required />

    <label for="inv_description">Description:</label>
    <textarea name="inv_description" id="inv_description" required></textarea>

    <label for="inv_image">Image Path:</label>
    <input type="text" name="inv_image" id="inv_image" value="<%- stickyData.inv_image || '/images/vehicles/no-image.png' %>" required />

    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input type="text" name="inv_thumbnail" id="inv_thumbnail" value="<%- stickyData.inv_thumbnail || '/images/vehicles/no-image-thumb.png' %>" required />

    <label for="inv_price">Price:</label>
    <input type="number" name="inv_price" id="inv_price" value="" required />

    <label for="inv_year">Year:</label>
    <input type="number" name="inv_year" id="inv_year" value="" required />

    <label for="inv_miles">Miles:</label>
    <input type="number" name="inv_miles" id="inv_miles" value="" required />

    <label for="inv_color">Color:</label>
    <input type="text" name="inv_color" id="inv_color" value="" required />

    <button type="submit">Add Inventory</button>
</form>