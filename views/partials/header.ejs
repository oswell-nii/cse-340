<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (typeof loggedin !== 'undefined' && loggedin && accountData) { %>
      <a href="/account/" title="Account Management" class="header-tool">
        <i class="fas fa-user"></i> Welcome <%= accountData.account_firstname %>
      </a>
      <a href="/account/logout" title="Log out" class="header-tool">
        <i class="fas fa-sign-out-alt"></i> Logout
      </a>
    <% } else { %>
      <a href="/account/login" title="Click to log in" class="header-tool">
        <i class="fas fa-user"></i> My Account
      </a>
    <% } %>
  </div>
  
</header>
